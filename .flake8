[flake8]
ignore =
  E203, # whitespace before ‘:’
  E501, # line too long
  W503, # line break before binary operator
exclude =
  .git,
  .mypy_cache,
  .tox,
  .venv,
  pgactivity/Data.py,
  pgactivity/Process.py,
  pgactivity/UI.py,
  setup.py,
per-file-ignores =
  pg_activity:E251
select = B,C,E,F,W,T4,B9
mypy_config = mypy.ini
